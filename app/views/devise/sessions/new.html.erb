<div class="container_new_edit">
	<h2>Sign in</h2>

	<%- if devise_mapping.omniauthable? %>
		<%= link_to(omniauth_authorize_path(resource_name, resource_class.omniauth_providers[0]), class: "fb-icon") do %>
	      <i class="fa fa-facebook-square"></i>
		<% end %>
	<% end -%>


	<%= render "devise/shared/links" %>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-inputs devise-txt">
	    <%= f.input :email, :required => false, :autofocus => true %>
	    <%= f.input :password, :required => false %>
	    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>
	    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign in" %>
	  </div>
	<% end %>

	<h2>Or</h2>

	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Create account", new_registration_path(resource_name), class: "button_create sign-up-btn" %><br />
<% end -%>
</div>